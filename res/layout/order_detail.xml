<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:orientation="vertical" >

    <!-- 整个标题栏 -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg" >

        <!-- 后退按钮 -->

        <LinearLayout
            android:id="@+id/order_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/title_item_selector"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/title_icon_left"
                style="@style/backStyle"
                android:src="@drawable/back" />
        </LinearLayout>

        <!-- title txt -->

        <TextView
            style="@style/titleTxtStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单详情" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 订单信息 -->

            <LinearLayout
                style="@style/linearLayout_box"
                android:background="@color/white"
                android:orientation="vertical" >

                <!-- 收货地址文本框及管理地址按钮 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/system_padding" 
                    android:orientation="vertical">
					
                    <TextView
                        android:id="@+id/order_code"
                        style="@style/littleTxtStyle"
                        android:text="订单号" />
                      <TextView
                           android:id="@+id/order_date"
                        style="@style/littleTxtStyle"
                        android:text="创建时间" />
                        <TextView
                             android:id="@+id/order_flag"
                        style="@style/littleTxtStyle"
                        android:text="订单状态" />
                       
                </LinearLayout>
              
            </LinearLayout>
            <!-- 商品清单模块 -->

            <LinearLayout
                style="@style/linearLayout_box"
                android:layout_margin="@dimen/system_padding"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    style="@style/littleTxtStyle"
                    android:text="商品清单" />

                <ListView
                    android:id="@+id/order_product_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </ListView>
            </LinearLayout>

               <!-- 地址管理模块 -->

            <LinearLayout
                style="@style/linearLayout_box"
                android:background="@color/white"
                android:orientation="vertical" >

                <!-- 收货地址文本框及管理地址按钮 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/system_padding" >

                    <TextView
                        style="@style/littleTxtStyle"
                        android:text="收货信息" />
                </LinearLayout>
                <!-- 默认地址显示栏 -->

                <LinearLayout
                    android:id="@+id/order_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/order_name_phone"
                        style="@style/littleTxtStyle"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:text="姓名电话" />

                    <TextView
                        android:id="@+id/order_address"
                        style="@style/littleTxtStyle"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:text="和地址" />
                </LinearLayout>
            </LinearLayout>
            

            <!-- 商品总价模块 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/system_padding"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right" >

                    <TextView
                        style="@style/littleTxtStyle"
                        android:text="运费：" />

                    <TextView
                        android:id="@+id/order_fregitPrice"
                        style="@style/littleTxtStyle"
                        android:text="0.0"
                        android:textColor="@color/red" />
                     </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right" >

                    <TextView
                        style="@style/littleTxtStyle"
                        android:text="订单总价：" />

                    <TextView
                        android:id="@+id/order_totalprice"
                        style="@style/littleTxtStyle"
                        android:text="0.0"
                        android:textColor="@color/red" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
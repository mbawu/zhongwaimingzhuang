<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >


    <!-- 整个标题栏 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg" >

        <!-- 后退按钮 -->

        <LinearLayout
            android:id="@+id/person_more_about_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/title_item_selector"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/title_icon_left"
                style="@style/backStyle"
                android:src="@drawable/back" />
        </LinearLayout>

        <!-- title txt -->

        <TextView
            style="@style/titleTxtStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们" />
    </FrameLayout>
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/person_more_about_top"/>
    
     <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_margin="@dimen/system_padding"
        android:background="@drawable/person_more_about_introduce"/>
 <TextView 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"/>
     <ImageView 
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/person_more_map"/>
     </LinearLayout>
     </ScrollView>
</LinearLayout>
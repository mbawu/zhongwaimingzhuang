<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_more"
    android:orientation="vertical" >

    <!-- 整个标题栏 -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg" >

        <!-- 后退按钮 -->

        <LinearLayout
            android:id="@+id/productlist_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/title_item_selector"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/title_icon_left"
                style="@style/backStyle"
                android:src="@drawable/back" />
        </LinearLayout>

        <!-- title txt -->

        <TextView
            style="@style/titleTxtStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品列表" />
    </FrameLayout>

    <ListView 
        android:id="@+id/productlist_first_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_more"
        android:layout_margin="@dimen/system_padding_mid"></ListView>
    <ListView 
        android:id="@+id/productlist_second_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_more"
        android:layout_margin="@dimen/system_padding_mid"></ListView>
    
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/gray_more"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout 
        android:background="@drawable/edit_text_selector"
        android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="8dp"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:layout_marginBottom="12dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/system_padding" >

        <TextView
            style="@style/txtStyle"
            android:padding="@dimen/system_padding"
            android:id="@+id/person_address_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="姓名"
            android:textSize="15sp"
            />
         <TextView
            style="@style/txtStyle"
            android:padding="@dimen/system_padding"
            android:layout_marginLeft="5dp"
            android:id="@+id/person_address_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textSize="15sp"
            android:text="电话"
            />
         
      <FrameLayout 
          android:id="@+id/person_address_item_default_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             >
             <ImageView 
                  android:id="@+id/person_address_item_default_img"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_gravity="right"
                 android:background="@drawable/default_address"
                 android:layout_marginRight="55dp"/>
              <TextView
            style="@style/txtStyle"
            android:padding="@dimen/system_padding"
            android:layout_marginLeft="5dp"
            android:id="@+id/person_address_item_default_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textSize="12sp"
            android:layout_gravity="right"
            android:text="默认地址"
            />
         </FrameLayout> 
    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/system_padding" >
         <TextView
            style="@style/txtStyle"
            android:padding="@dimen/system_padding"
            android:layout_marginLeft="5dp"
            android:id="@+id/person_address_item_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textSize="15sp"
            android:text="地址"
            />
    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
         android:layout_marginBottom="10dp"
        android:gravity="right">
         
         <TextView 
             android:id="@+id/person_address_item_edite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:background="@drawable/button"
                   android:textColor="@color/white"
             style="@style/litleBtnStyle"
             android:text="编辑"/>
         
          <TextView 
               android:id="@+id/person_address_item_delete"
                         android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:background="@drawable/button"
             android:textColor="@color/white"
             style="@style/litleBtnStyle"
             android:layout_marginLeft="30dp"
             android:layout_marginRight="30dp"
             android:text="删除"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <RadioGroup
            android:id="@+id/person_coupon_tab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 全部 -->

            <RadioButton
                android:id="@+id/person_coupon_all"
                style="@style/subTabStyle"
                android:layout_weight="1.0"
                android:text="全部"
                android:textColor="@color/color_order_tab_radiobutton" />
            <!-- 有效 -->

            <RadioButton
                android:id="@+id/person_coupon_use"
                style="@style/subTabStyle"
                android:layout_weight="1.0"
                android:text="有效"
                android:textColor="@color/color_order_tab_radiobutton" />
            <!-- 无效 -->

            <RadioButton
                android:id="@+id/person_coupon_unuse"
                style="@style/subTabStyle"
                android:layout_weight="1.0"
                android:text="无效"
                android:textColor="@color/color_order_tab_radiobutton" />
        </RadioGroup>

        <ListView 
            android:id="@+id/person_coupon_listView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
</LinearLayout>
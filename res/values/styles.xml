<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 底部菜单栏样式 -->
    <style name="MMTabButton">
        <item name="android:textSize">12.0dip</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/main_menu_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
    </style>

    <!-- 标题的统一风格 -->
    <style name="titleTxtStyle">
        <item name="android:textSize">20.0dip</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
    </style>

    <!-- 标题旁边的按钮风格 -->
    <style name="titleBtnStyle">
        <item name="android:textSize">20.0dip</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">7.0dip</item>
        <item name="android:paddingBottom">7.0dip</item>
        <item name="android:paddingTop">7.0dip</item>
        <item name="android:paddingLeft">7.0dip</item>
    </style>

    <!-- 个人中心标签样式 -->
    <style name="btnTxtStyle">
        <item name="android:textSize">18.0dip</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/person_tab_bg</item>
        <item name="android:button">@null</item>
    </style>

    <!-- 小按钮样式 -->
    <style name="litleBtnStyle">
        <item name="android:textSize">16.0dip</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 正文显示样式 -->
    <style name="txtStyle">
        <item name="android:textSize">12.0dip</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 小正文显示样式 -->
    <style name="littleTxtStyle">
        <item name="android:textSize">15.0dip</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <!-- 结算页面更小的字体样式 -->
    <style name="littleMoreTxtStyle">
        <item name="android:textSize">13.0dip</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <!-- 后退按钮 -->
    <style name="backStyle">
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- 订单选项卡样式 -->
    <style name="subTabStyle">
        <item name="android:textSize">18.0dip</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/person_order_tab_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:button">@null</item>
    </style>

    <!-- 输入框样式 -->
    <style name="input_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textCursorDrawable">@color/blue</item>
        <item name="android:background">@drawable/edit_text_selector</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/lighter_gray</item>
    </style>

    <!-- 容器盒子样式 -->
    <style name="linearLayout_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@color/blue</item>
        <item name="android:background">@drawable/edit_text_selector</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/lighter_gray</item>
    </style>

    <!-- 二级分类列表容器盒子样式 -->
    <style name="linearLayout_box_productlist_sec">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/layout_productlist_sec</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 商品详情容器盒子样式 -->
    <style name="product_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <!-- 评论星级样式,不可编辑模式 -->
    <style name="RedStartRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/redstar_ratingbar_full</item>
        <item name="android:minHeight">11dip</item>
        <item name="android:maxHeight">11dip</item>
        <item name="android:isIndicator">true</item>
    </style>
<!-- 评论星级样式，可编辑模式 -->
    <style name="EditeStartRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/bigstar_ratingbar_full</item>
        <item name="android:minHeight">11dip</item>
        <item name="android:maxHeight">30dip</item>
    </style>
    
    <style name="SexRadioBtn">  
      <!--   <item name="android:background">@drawable/radio_btn_bg</item>   -->
        <item name="android:button">@drawable/radio_sex</item>  
	</style> 
	
     <style name="ItemRadioBtn">  
      <!--   <item name="android:background">@drawable/radio_btn_bg</item>   -->
        <item name="android:background">@drawable/radio_item</item>  
             <item name="android:layout_marginTop">5dp</item>
	</style> 
	<!-- 下面是自定义弹出框的样式 -->

    <style name="text_18_ffffff">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="text_16_666666">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff666666</item>
    </style>

    <style name="sdw_white">
        <item name="android:shadowColor">#7fffffff</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.65</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="sdw_79351b">
        <item name="android:shadowColor">#ff79351b</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="text_15_ffffff_sdw" parent="@style/sdw_79351b">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="text_15_666666_sdw" parent="@style/sdw_white">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">#ff666666</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>